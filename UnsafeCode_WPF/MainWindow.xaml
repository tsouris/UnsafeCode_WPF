<Window x:Class="UnsafeCode_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnsafeCode_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Width="400" Height="400">
            <Label Content="Number Guessing Game" HorizontalAlignment="Center" FontSize="24"/>
            <Button Content="Start Game" Click="StartGame_Click" Width="100" HorizontalAlignment="Center" Margin="0 150 0 0"/>
        </StackPanel>
    </Grid>
</Window>
